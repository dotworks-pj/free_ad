<%= form_with(model: [:mypage, space], local: true) do |f| %>
  <% if space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
        <% space.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= f.label :name, class: 'col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= f.label :charge, class: 'col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :charge, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= f.label :status, class: 'col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.select :status, Space.statuses.keys, {prompt: '選択してください'}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :description, class: 'col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group space-image row">
    <div class="col-sm-2 ">
      <%= f.label :space_images, class: 'col-form-label' %>
    </div>

    <div class="space_images col-sm-10">
      <%= f.fields_for :space_images do |space_image| %>
        <%= render 'space_image_fields', f: space_image %>
      <% end %>
      <div class="links">
        <%= link_to_add_association "画像を追加", f, :space_images %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: 'btn btn-info' %>
  </div>
<% end %>

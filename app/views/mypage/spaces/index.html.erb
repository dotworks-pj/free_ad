<div class="mypage_contents">
  <div class="mypage-spaces">
    <h3>スペース一覧</h3>
    <% @spaces.each do |space| %>
      <div class="space">
        <div class="row">
          <%= link_to(edit_mypage_place_space_path(@place, space) ,class: "col-md-3") do %>
            <%= image_tag(space.space_images.first.image.url(:thumb), class: "d-block") %>
          <% end %>
          <div class="col-md-9">
            <h4>
                <%= space.name %>
            </h4>
            <div>
              料金（１週間あたり） : <%= number_to_currency space.charge %>
            </div>
            <div>
              ステータス: <%= space.status %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to 'スペースを追加', new_mypage_place_space_path(@place) %>
  </div>
  <div class="actions">
    <% if @place.owner_profile %>
      <%= link_to '次へ', edit_mypage_place_owner_profile_path(@place), class: 'btn btn-success' %>
    <% else %>
      <%= link_to '次へ', new_mypage_place_owner_profile_path(@place), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

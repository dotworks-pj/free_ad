
<%= simple_form_for [:mypage, place] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :station %>
    <%= f.input :url %>
    <%= f.input :main_image, as: :file, hint: image_tag(f.object.main_image.url) %>
  </div>

  <div class="actions">
    <%= f.button :submit, class: 'btn btn-info' %>
  </div>
<% end %>

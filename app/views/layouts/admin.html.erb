<!DOCTYPE html>
<html>
<head>
  <title>管理画面</title>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

  <%= stylesheet_link_tag 'admin', media: 'all' %>
  <%= javascript_pack_tag 'admin' %>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
</head>
<body class="hold-transition skin-black-light sidebar-mini">
<div class="wrapper">
  <header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>FreeAd</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>FreeAd</b>管理画面</span>
    </a>
    <nav class="navbar navbar-static-top" role="navigation">

      <!-- メニュー項目 -->
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <!-- サイドバー制御 -->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <li class="dropdown user user-menu">
              <!-- Menu Toggle Button -->
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                <span class="hidden-xs"><%= current_admin_user.email %></span>
              </a>
              <ul class="dropdown-menu">
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                    <%= link_to '#', class: 'btn btn-default btn-flat' do %>
                      プロフィール
                    <% end %>
                  </div>
                  <div class="pull-right">
                    <%= link_to(destroy_admin_user_session_path, method: :delete, class: 'btn btn-default btn-flat') do %>
                      ログアウト
                    <% end %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <aside class="main-sidebar">
    <section class="sidebar">
      <ul class="sidebar-menu" data-widget="tree">
        <li class="header">ナビゲーション</li>
        <li>
          <i class="fa fa-dashboard fa-fw"></i> <span class="nav-label">ダッシュボード</span>
        </li>
      </ul>
    </section>
  </aside>

  <div class="content-wrapper">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %> alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= message %>
      </div>
    <% end %>
    <section class="content">
      <div class="row">
        <%= yield %>
      </div>
    </section>
  </div>
</div>
</body>
</html>
